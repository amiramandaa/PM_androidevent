<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/facebook_avatar" />

        <TextView
            android:id="@+id/scode_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="" />

        <RelativeLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scode_profile"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/nama_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amira Nurul Amanda"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_above="@+id/nim"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>


        <RelativeLayout
            android:id="@+id/nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:paddingVertical="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/nim_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="181402009"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@+id/nim"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>



        <View
            android:layout_below="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>

        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@id/nim"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/email_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amiraamandanurul@gmail.com"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>

        <View
            android:layout_below="@+id/angkatan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>

        <RelativeLayout
            android:id="@+id/angkatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angkatan"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/angkatan_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>



        <View
            android:layout_below="@+id/fakultas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>
        <RelativeLayout
            android:id="@+id/fakultas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@id/angkatan"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fakultas"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/fakultas_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasilkom-TI"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_above="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>



        <View
            android:layout_below="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>

        <RelativeLayout
            android:id="@+id/prodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@id/fakultas"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prodi"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/prodi_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teknologi Informasi"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@id/prodi"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester Terdaftar"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/semester_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@id/semester"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/status_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>

















